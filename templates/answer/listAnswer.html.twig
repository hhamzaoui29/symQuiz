{% extends 'base.html.twig' %}

{% block title %} List of Answers {% endblock %}

{% block body%}

<body>

{# read and display several types of flash messages (" Message apr√©s validation") #}
  {% for label, messages in app.flashes(['success', 'warning']) %}
        {% for message in messages %}
        <div class=" alert alert-success mt-4">
            {{ message }}
        </div>
       {% endfor %}
  {% endfor %}
<div class="container mt-4">
    <h1>List Of Answers </h1>
    <p calss="new"><a href="/createAnswer"> New </a></p>
    <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Question</th>
      <th scope="col">Answer</th>
      <th scope="col">Is Correct?</th>
      <th scope="col">Update</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    {# Afficher le nombre de questios  #}
    <div class="count mt-4">
        <h4> There Are {{ answers.getTotalItemCount  }} Answers In Total </h4>
    </div>
    {% for answer in answers %}
    <tr class="table-primary">
     
      <td>{{answer.question.question}}</td>
      <td> {{answer.answer}}  </td>
      <td> {{answer.correct}} </td>
      <td><a href="/updateAnswer/{{answer.id}}">Update</a></td>
      <td><a href="/deleteAnswer/{{answer.id}}">Delete</a></td>
    </tr>
 {% endfor %}
  </tbody>
</table>
{# code pour afficher la bare des tableau #}
    <div class="navigation d-flex justify-content-center mt-4">
           {{ knp_pagination_render(answers) }}
    </div>
</div>
</body>
{% endblock %}